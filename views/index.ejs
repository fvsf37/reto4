<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mapa de Puntos de Interés</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <style>
      #map {
        height: 500px;
        width: 100%;
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body class="container">
    <h1 class="text-center mt-3">Mapa de Puntos de Interés</h1>

    <div id="map"></div>

    <button id="findNearest" class="btn btn-info mb-3">
      Encontrar Punto Más Cercano
    </button>

    <h2>Añadir Nuevo Punto de Interés</h2>
    <form id="addPointForm" class="mb-4">
      <div class="mb-2">
        <label class="form-label">Nombre:</label>
        <input type="text" id="name" class="form-control" required />
      </div>
      <div class="mb-2">
        <label class="form-label">Descripción:</label>
        <input type="text" id="description" class="form-control" required />
      </div>
      <div class="mb-2">
        <label class="form-label">Latitud:</label>
        <input
          type="number"
          id="latitude"
          class="form-control"
          step="any"
          required
        />
      </div>
      <div class="mb-2">
        <label class="form-label">Longitud:</label>
        <input
          type="number"
          id="longitude"
          class="form-control"
          step="any"
          required
        />
      </div>
      <button type="submit" class="btn btn-primary">Añadir Punto</button>
    </form>

    <!-- Modal para editar punto -->
    <div class="modal fade" id="editModal" tabindex="-1">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Editar Punto de Interés</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>
          <div class="modal-body">
            <form id="editPointForm">
              <input type="hidden" id="editId" />
              <div class="mb-2">
                <label class="form-label">Nuevo Nombre:</label>
                <input type="text" id="editName" class="form-control" />
              </div>
              <div class="mb-2">
                <label class="form-label">Nueva Descripción:</label>
                <input type="text" id="editDescription" class="form-control" />
              </div>
              <div class="mb-2">
                <label class="form-label">Nueva Latitud:</label>
                <input
                  type="number"
                  id="editLatitude"
                  class="form-control"
                  step="any"
                />
              </div>
              <div class="mb-2">
                <label class="form-label">Nueva Longitud:</label>
                <input
                  type="number"
                  id="editLongitude"
                  class="form-control"
                  step="any"
                />
              </div>
              <button type="submit" class="btn btn-success">
                Guardar Cambios
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/map.js"></script>
  </body>
</html>
