<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mapa de Puntos de Interés</title>
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/styles.css" />
  </head>
  <body>
    <!-- 🔑 Sección de Login -->
    <div class="glass-card mt-4 text-center">
      <h2>🔑 Iniciar Sesión</h2>
      <form id="loginForm" method="post">
        <input
          type="text"
          id="username"
          class="form-control mb-2"
          placeholder="Usuario"
          required
        />
        <input
          type="password"
          id="password"
          class="form-control mb-2"
          placeholder="Contraseña"
          required
        />
        <button type="submit" class="btn btn-custom">Iniciar Sesión</button>
      </form>
      <button id="logoutBtn" class="btn btn-danger mt-2" style="display: none">
        Cerrar Sesión
      </button>
    </div>

    <div class="container-custom">
      <h1 class="text-center mt-3">Mapa de Puntos de Interés</h1>

      <!-- 📌 Sección del Mapa -->
      <div class="glass-card mt-4">
        <div id="map"></div>
      </div>

      <!-- 🎯 Botón para encontrar el punto más cercano -->
      <div class="text-center mt-3">
        <button id="findNearest" class="btn btn-custom">
          🔍 Encontrar Punto Más Cercano
        </button>
      </div>

      <!-- 📌 Filtro de Categoría -->
      <div class="glass-card mt-4">
        <h2>🎭 Filtrar por Categoría</h2>
        <label for="categoryFilter" class="form-label"
          >Selecciona una categoría:</label
        >
        <select id="categoryFilter" class="form-select">
          <option value="Todos">Todos</option>
          <option value="Histórico">🏰 Histórico</option>
          <option value="Parque">🌳 Parque</option>
          <option value="Museo">🖼️ Museo</option>
          <option value="Restaurante">🍽️ Restaurante</option>
          <option value="Otro">🔹 Otro</option>
        </select>
      </div>

      <!-- 📌 Sección para Agregar Puntos (Oculta por defecto) -->
      <div class="glass-card mt-4" id="addPointSection" style="display: none">
        <h2>📍 Añadir Nuevo Punto de Interés</h2>
        <form id="addPointForm" class="row g-3">
          <div class="col-md-6">
            <label class="form-label">🏷️ Nombre:</label>
            <input type="text" id="name" class="form-control" required />
          </div>
          <div class="col-md-6">
            <label class="form-label">📝 Descripción:</label>
            <input type="text" id="description" class="form-control" required />
          </div>
          <div class="col-md-6">
            <label class="form-label">📌 Categoría:</label>
            <select id="category" class="form-select" required>
              <option value="Histórico">🏰 Histórico</option>
              <option value="Parque">🌳 Parque</option>
              <option value="Museo">🖼️ Museo</option>
              <option value="Restaurante">🍽️ Restaurante</option>
              <option value="Otro">🔹 Otro</option>
            </select>
          </div>
          <div class="col-md-3">
            <label class="form-label">🌍 Latitud:</label>
            <input
              type="number"
              id="latitude"
              class="form-control"
              step="any"
              required
            />
          </div>
          <div class="col-md-3">
            <label class="form-label">🌍 Longitud:</label>
            <input
              type="number"
              id="longitude"
              class="form-control"
              step="any"
              required
            />
          </div>
          <div class="col-12 text-center">
            <button type="submit" class="btn btn-custom">
              ➕ Añadir Punto
            </button>
          </div>
        </form>
      </div>

      <!-- 📌 Modal para Editar Puntos -->
      <div class="modal fade" id="editModal" tabindex="-1">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">✏️ Editar Punto de Interés</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
              ></button>
            </div>
            <div class="modal-body">
              <form id="editPointForm">
                <input type="hidden" id="editId" />
                <div class="mb-2">
                  <label class="form-label">🏷️ Nuevo Nombre:</label>
                  <input type="text" id="editName" class="form-control" />
                </div>
                <div class="mb-2">
                  <label class="form-label">📝 Nueva Descripción:</label>
                  <input
                    type="text"
                    id="editDescription"
                    class="form-control"
                  />
                </div>
                <div class="mb-2">
                  <label class="form-label">📌 Nueva Categoría:</label>
                  <select id="editCategory" class="form-select">
                    <option value="Histórico">🏰 Histórico</option>
                    <option value="Parque">🌳 Parque</option>
                    <option value="Museo">🖼️ Museo</option>
                    <option value="Restaurante">🍽️ Restaurante</option>
                    <option value="Otro">🔹 Otro</option>
                  </select>
                </div>
                <div class="mb-2">
                  <label class="form-label">🌍 Nueva Latitud:</label>
                  <input
                    type="number"
                    id="editLatitude"
                    class="form-control"
                    step="any"
                  />
                </div>
                <div class="mb-2">
                  <label class="form-label">🌍 Nueva Longitud:</label>
                  <input
                    type="number"
                    id="editLongitude"
                    class="form-control"
                    step="any"
                  />
                </div>
                <button type="submit" class="btn btn-custom">
                  💾 Guardar Cambios
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/auth.js"></script>
    <script src="/javascripts/map.js"></script>
  </body>
</html>
